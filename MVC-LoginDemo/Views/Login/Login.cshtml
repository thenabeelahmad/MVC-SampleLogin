@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" >

    <title>Testing Db</title>
</head>
<body class="bg-primary">
    <div class="container mt-5 w-50 ">

<div class="card text-light bg-dark p-3" >
  <div class="card-body">
    <h5 class="card-title text-center h1 text-light">Login Form</h5>
    <p class="card-text text-center" style="letter-spacing:8px;">Enter your credentials to Login.</p>

      <div>
          
<form method="post" action="Login/Login"> 
  <div class="mb-3">
    <label class="form-label">Username</label>
    <input type="text" class="form-control" name="name" >
    
  </div>
  
  <div class="mb-3">
    <label class="form-label">Password</label>
    <input type="password" class="form-control" name="email">
  </div>

  <hr style="border:2px solid white" />
  
  <button type="submit" class="btn btn-primary w-100">Submit</button>

</form>

      </div>


   
  </div>
</div>
        
        @{
            if(IsPost==true)
            {
                <h3 class="text-center text-light mt-2">@ViewBag.confirm </h3>
            }
        }
        

    </div>
</body>

</html>